{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 mt-5">
            <h1>Posts list - count = {{ posts | length }}</h1>
        </div>
        <div class="col-6 text-right mt-5">
            <a href="{{ path('blog_post_new') }}" class="btn btn-primary">
                Create new post
            </a>
            <a href="{{ path('blog_post_new_dummy') }}" class="btn btn-primary">
                Create new dummy post
            </a>
        </div>
    </div>
    <div class="row">
        {% for post in posts %}
            <div class="col mt-5">
                    <div class="card" style="width: 400px; height: 250px;">
                        <h5 class="card-header">{{ post.title | u.truncate(35, '...') }}</h5>
                        <div class="card-body">
                            <p class="card-text">{{ post.body | u.truncate(100, '...') }}</p>
                        </div>
                        <div class="card-footer">
                            <i>
                                {{ post.createdAt |date('Y-m-d') }}
                            </i>
                            <a href="{{ path('blog_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-info text-right">
                                Modify
                            </a>
                            <a href="{{ path('blog_post_delete', {'id': post.id}) }}" class="btn btn-sm btn-danger text-right">
                                Delete
                            </a>
                        </div>
                    </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
