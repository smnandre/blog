{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 mt-5">
            <h1>Posts list - count = {{ posts | length }}</h1>
        </div>
        <div class="col-6 text-right mt-5">
            <a href="{{ path('blog_post_new') }}" class="btn btn-primary">
                Create new post
            </a>
            <a href="{{ path('blog_post_new_dummy') }}" class="btn btn-primary">
                Create new dummy post
            </a>
        </div>
    </div>
    <div class="row">
        {% for post in posts %}
            {{ component('PostCard', {post: post}) }}
        {% endfor %}
    </div>
{% endblock %}
